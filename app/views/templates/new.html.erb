<div class="modal fade" id="newTemplate" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">New Environment Template</h4>
      </div>
      <div class="modal-body">
        <%= form_for @template, :remote => true, :html => {:class => "new_template_form", :role => "form", :method => ""} do |f| %>
          <div class="well">
            <div class="form-group">
              <%= f.label "Name", :class => "control-label" %>
                <%= f.text_field :name, :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "Description", :class => "control-label" %>
                <%= f.text_area :description, :class => "form-control", :rows => 8, :value => @template.generate_content_description %>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.hidden_field :project_id, :value => project_id %>
          <%= f.hidden_field :created_by, :value => current_user.id %>
          <%= f.submit 'Submit', :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
