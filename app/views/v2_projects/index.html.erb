<div class="col-md-10">
  <h1>OpenShift Labs</h1>
</div>
<div class="col-md-2">
  <% if logged_in? && current_user.admin? && !Lab.all.empty? %>
    <a class="btn btn-primary" data-toggle="modal" data-target="#newProject" >New Environment</a>
  <% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Region</th>
      <th>OSE Version</th>
      <th>Name</th>
      <th>Domain</th>
      <th># of Instances</th>
      <th>Checked Out By</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><a href="/v2_projects/<%= project.id %>" class="btn btn-default">View</a></td>
      <td><%= Lab.find(project.lab_id).geo %></td>
      <td><%= project.ose_version %></td>
      <td><b><%= project.name %></b></td>
      <td><%= project.domain %></td>
      <td><%= project.v2_instances.count %></td>
      <td><% if project.checked_out? %><%= User.find(project.checked_out_by).name %><% else %><span class="text-success">Nobody!</span><% end %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render :template => 'v2_projects/new', :locals => {:@project => V2Project.new, :lab_id => Lab.all.first.id}  %>
